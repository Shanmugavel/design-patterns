<?xml version="1.0" encoding="UTF-8"?>
<Configuration  monitorInterval="30">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} THREAD=%t LEVEL=%-5level LOGGER=%logger  MSG=%msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
	<Logger name="xyz.shanmugavel" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>  
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>